generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto, citext]
}

model User {
  id             BigInt   @id @default(autoincrement())
  name            String   @db.Citext
  email           String   @unique @db.Citext
  password        String
  avata           String?
  enabled         Boolean //(Active, Inactive)
  //monthlySpending Decimal?  @db.Money  //gastos mensais
 // annualSpending  Decimal? @db.Money //gastos anuais
  //monthlyEarning  Decimal?  @db.Money  //ganho mensal
 // gainAnnual      Decimal?  @db.Money //ganho anual
  //monthlySaving   Decimal?  @db.Money  //poupan√ßa mensal
 
  income    Income[]

  expense   Expense[]

  account   Account []

  category  Category []

  subCategory  SubCategory []

  createdAt DateTime @default(now())

  @@map("user")
}

model Income {
  id           BigInt   @id @default(autoincrement())
  title         String   @unique @db.Citext
  value         Decimal  @db.Money
  icomeDate     DateTime
  description   String

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  category  Category @relation(fields: [categoryId], references: [id])
  categoryId BigInt 

  account  Account @relation(fields: [accountId], references: [id])
  accountId BigInt 
 
  user  User @relation(fields: [userId], references: [id])
  userId BigInt 

  @@map("income")
}

model Expense{
  id            BigInt   @id @default(autoincrement())
  title         String   @unique @db.Citext
  value         Decimal  @db.Money
  expenseDate   DateTime
  description   String

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  category  Category @relation(fields: [categoryId], references: [id])
  categoryId BigInt 

  account  Account @relation(fields: [accountId], references: [id])
  accountId BigInt 
 
  user  User @relation(fields: [userId], references: [id])
  userId BigInt 

  @@map("expense")
}

model Category {
  id            BigInt      @id @default(autoincrement())
  name          String     @unique @db.Citext
  icon          Int?
  createdAt     DateTime    @default(now())
  
  subCategory   SubCategory[]
  income    Income[]
  expense   Expense[]
  user  User @relation(fields: [userId], references: [id])
  userId BigInt 
 

  @@map("category")
}

model SubCategory {
  id            BigInt      @id @default(autoincrement())
  name          String     @unique @db.Citext
  createdAt     DateTime    @default(now())

  category  Category @relation(fields: [categoryId], references: [id])
  categoryId BigInt 
  
  user  User @relation(fields: [userId], references: [id])
  userId BigInt 

  @@map("subCategory")
}

model Account {
  id             BigInt     @id @default(autoincrement())
  name           String    @unique @db.Citext
  balance        Decimal?  @db.Money
  typeAccount    String //(card, credi, Cash )
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  income    Income[]

  expense   Expense[]

  user  User @relation(fields: [userId], references: [id])
  userId BigInt   

   @@map("account")
}

