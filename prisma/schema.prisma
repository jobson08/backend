generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto, citext]
}

model User {
  id             BigInt   @id @default(autoincrement())
  name            String   @db.Citext
  email           String   @unique @db.Citext
  password        String
  avatar          String?
  status          Boolean //(Active, Inactive)
  monthlySpending BigInt  //gastos mensais
  annualSpending  BigInt  //gastos anuais
  monthlyEarning  BigInt  //ganho mensal
  gainAnnual      BigInt  //ganho anual
  monthlySaving   BigInt  //poupan√ßa mensal
  role            Int?  //(Admin, User)
  token           String
  createdAt DateTime @default(now())

  Income    Income @relation(fields: [incomeId], references: [id])
  incomeId BigInt     @map("income_id")
  
  Expense    Expense @relation(fields: [expenseId], references: [id])
  expenseId BigInt     @map("expense_id")
  
  Category  Category @relation(fields: [categoryId], references: [id])
  categoryId BigInt     @map("category_id")
 
  Account   Account @relation(fields: [accontId], references: [id])
  accontId BigInt     @map("accont_id")
  @@map("user")
}

model Income {
  id        BigInt   @id @default(autoincrement())
  title     String   @unique @db.Citext
  value     Decimal  @db.Money
  icomeDate DateTime
  user      User []
  account   Account []
  category  Category []
  createdAt     DateTime    @default(now())
 
  @@map("income")
}

model Expense{
  id            BigInt   @id @default(autoincrement())
  title         String   @unique @db.Citext
  value         Decimal  @db.Money
  expenseDate   DateTime
  user          User []
  account       Account []
  category      Category[]
  createdAt     DateTime    @default(now())
 
  @@map("expense")
}

model Category {
  id            BigInt      @id @default(autoincrement())
  name          String     @unique @db.Citext
  type          BigInt  //(Income, Expense )
  user          User []
  createdAt     DateTime    @default(now())
 
  Income   Income @relation(fields: [incomeId], references: [id])
  incomeId BigInt     @map("income_id")

  Expense    Expense @relation(fields: [expenseId], references: [id])
  expenseId BigInt     @map("expense_id")

  @@map("category")
}

model Account {
  id         BigInt     @id @default(autoincrement())
  name       String    @unique @db.Citext
  balance    Decimal  @db.Money
  type       String
  status     Boolean
  user       User []
  createdAt  DateTime    @default(now())

  Income   Income @relation(fields: [incomeId], references: [id])
  incomeId BigInt     @map("income_id")

  Expense    Expense @relation(fields: [expenseId], references: [id])
  expenseId BigInt     @map("expense_id")
   @@map("acconunt")
}

